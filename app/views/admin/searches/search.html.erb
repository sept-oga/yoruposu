<% if @model == 'user' %>
	<h2 class="text-center mb-3">ユーザー "<%= @content %>" の検索結果</h2>
  <%= render 'admin/users/index', users: @records %>
<% elsif @model == 'post' %>
  <h2 class="text-center mb-3">投稿 "<%= @content %>" の検索結果</h2>
  <%= render 'admin/posts/index', posts: @records %>
<% elsif @model == 'group' %>
  <h2 class="text-center mb-3">グループ "<%= @content %>" の検索結果</h2>
  <%= render 'admin/groups/index', groups: @records %>
<% end %>

<% if @records.count == 0 %>
  <p class="text-center">検索結果が見つかりませんでした。</p>
<% end %>