<%= render 'layouts/notice', object: @group_post %>

<!-- 投稿詳細画面 -->
<div>
  <p><%= link_to "<< 投稿一覧へ戻る", admin_group_group_posts_path(@group_post.group.id) %></p>
  <h3><%= @group_post.title %></h3>
  <%= image_tag @group_post.get_gp_image, style: "object-fit: contin;", class: "col-12 col-lg-10 col-xl-8" %>
  <p>
    <span><i class="fa-solid fa-location-dot"></i> <%= @group_post.address %></span>
  </p>
  <p><%= @group_post.body %></p>

  <!-- 投稿ユーザー情報 -->
  <%= link_to admin_user_path(@user) do %>
    <%= image_tag @user.get_profile_image, width: 75, height: 75, class: "object-fit-cover rounded-circle" %>
    <%= @user.name %>
  <% end %>
  
  <!-- 投稿日 -->
  <p>投稿日：<%= @group_post.created_at.strftime('%Y/%m/%d') %></p>

  <!-- 削除ボタン -->
  <div class="pb-3">
    <%= link_to "削除", admin_group_group_post_path(@group_post.group_id, @group_post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-outline-primary" %>
  </div>
</div>