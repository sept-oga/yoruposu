<div class="container justify-content-centd-flexer">
  <div class="col-sm-12 col-md-8 px-sm-0 mx-auto">
    <table class="table", style="color: ghostwhite">
      <thead>
        <tr>
          <th></th>
          <th>グループ名</th>
          <th>オーナー</th>
          <th>メンバー数</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% groups.each do |group| %>
        <tbody>
          <tr>
            <td><%= image_tag group.get_group_image, size: "50x50", class: "icon-img" %></td>
            <td><%= link_to group.name, admin_group_path(group), class: "group_#{group.id}" %></td>
            <td><%= group.owner.name %></td>
            <td><%= group.group_members.count %></td>
            <td><%= link_to "削除", admin_group_path(group), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-secondary" %></td>
          </tr>
        </tbody>
      <% end %>
    </table> 
  </div>
</div>