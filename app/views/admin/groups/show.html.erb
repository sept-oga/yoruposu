<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2><%= @group.name %></h2>
      <table class='table', style="color: ghostwhite">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tr>
          <td><%= image_tag @group.get_group_image, size: '50x50' %></td>
          <td><%= @group.name %></td>
          <td><%= @group.introduction %></td>
          <td>
            <% @group.users.each do |user| %>
              <li style="list-style: none;"><%= user.name %></li>
            <% end %>
          </td>
          <td>
            <%= link_to "削除", admin_group_path(@group), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-secondary" %>
          </td>
        </tr>
      </table>  
      <p class="text-center"><%= link_to "グループ一覧投稿へ", admin_group_group_posts_path(@group) %></p>
      <p class="text-center"><%= link_to "グループ一覧へ戻る", admin_groups_path %></p>
    </div>
  </div>
</div> 