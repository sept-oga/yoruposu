<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='offset-md-1'>

      <p><%= link_to "<< グループ一覧へ戻る", admin_groups_path %></p>
      <h2><%= @group.name %></h2>
      <%= image_tag @group.get_group_image, size: '150x150', class: "mb-3" %><br>

      <div class="pb-3">
        <%= link_to '削除', admin_group_path(@group), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-outline-primary" %>
      </div>

      <div class="pb-3">
        <p><%= @group.introduction %></p>
        オーナー：
        <%= link_to admin_user_path(@group.owner) do %>
          <%= image_tag @group.owner.get_profile_image, width: 75, height: 75, class: "object-fit-cover rounded-circle" %>
          <%= @group.owner.name %>
        <% end %>
      </div>

      <%= link_to "グループ投稿一覧", admin_group_group_posts_path(@group) %>

      <h4 class="pt-5">メンバー一覧</h4>
      <div class="row mt-3">
        <div class="col-11 col-md-12 mx-auto">
          <% @users.each do |user| %>
            <table class="pb-3">
              <tr>
                <td class="p-2"><%= image_tag user.get_profile_image, width: 75, height: 75, class: "object-fit-cover rounded-circle" %></td>
                <td class="p-2"><%= link_to user.name, admin_user_path(user) %></td>
                <td class="p-2"><%= user.introduction %></td>
                <td class="p-2"><%= link_to 'グループ退会', admin_group_group_members_path(@group, user_id: user.id), method: :delete, "data-confirm" => "グループを退会させますか？", class: "btn btn-sm btn-secondary" %></td>
              </tr>
            </table>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div> 