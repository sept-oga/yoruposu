<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='offset-md-1'>
      <%= render 'layouts/notice', object: @group %>
      <h2><%= @group.name %></h2>
      <table class='table', style="color: ghostwhite">
        <thead>
          <tr>
            <th></th>
            <th>オーナー</th>
            <th>紹介文</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tr>
          <td><%= image_tag @group.get_group_image, size: '50x50' %></td>
          <td><%= @group.owner.name %></td>
          <td><%= @group.introduction %></td>
          <td class="btn-group pb-3">
            <%= link_to '削除', admin_group_path(@group), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-outline-primary" %>
          </td>
        </tr>
      </table>

      <table class="mb-4">
        <tr>
          <td><%= link_to "<< 一覧へ戻る", admin_groups_path %> | </td>
          <td><%= link_to "グループ投稿一覧", admin_group_group_posts_path(@group) %></td>
        </tr>
      </table>

      <h4 class="text-center">メンバー一覧</h4>
      <div class="row mt-4">
        <div class="col-11 col-md-12 mx-auto">
          <% @users.each do |user| %>
            <table class="mb-3">
              <tr>
                <td><%= image_tag user.get_profile_image, width: 75, height: 75, class: "object-fit-cover rounded-circle" %></td>
                <td><%= link_to user.name, admin_user_path(user) %></td>
                <td><%= user.introduction %></td>
              </tr>
            </table>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div> 