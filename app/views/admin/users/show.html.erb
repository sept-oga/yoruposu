<p><%= link_to "<< ユーザー一覧へ戻る", admin_dashboards_path %></p>

<div class="pb-3 text-center">
  <h2><%= @user.name %></h2>
  <%= image_tag @user.get_profile_image, size: "150x150", class: "icon-img rounded-circle" %>
  <div class="mt-3">
    <%= simple_format(@user.introduction, sanitize: true)%>
  </div>
  <%= link_to "退会", admin_user_path(@user), method: :delete, "data-confirm" => "本当に退会しますか？", class: "btn btn-sm btn-outline-primary" %>
</div>

<%= render 'admin/posts/index', posts: @posts %>

<div class="d-flex justify-content-center">
  <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
</div>
