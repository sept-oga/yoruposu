<h2>投稿編集</h2>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
  <label for="inputTitle">タイトル</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%>
  <label for="inputBody">本文</label>
  <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"本文"%>
  <label for="inputImage">画像</label>
  <%= f.file_field :image, placeholder: "画像", accept: "image/*" %>  
  <%= f.submit "変更" %>
<% end %>