<h2>投稿編集</h2>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
  <label for="inputTitle">タイトル（50文字以内）</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%><br>
  <label for="inputBody">本文</label>
  <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"本文"%><br>
  <label for="inputImage">画像</label>
  <%= f.file_field :image, placeholder: "画像", accept: "image/*" %><br>
  <%= f.submit "変更" %><br>
  <%= link_to "投稿を削除", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>

