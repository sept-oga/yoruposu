<h1>新規投稿</h1>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
  <p>画像</p>
  <%= f.file_field :image, accept: "image/*" %>

  <p>タイトル</p>
  <%= f.text_field :title %>

  <p>本文</p>
  <%= f.text_area :body %>
  
  <!--場所情報は後で作成-->
  <%= f.submit '投稿' %>
<% end %>
