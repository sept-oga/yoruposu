<h2>投稿一覧</h2>
<% @posts.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image, width: 240, height: 160, style: "object-fit: contain;" %>
    <% end %>
    <p>投稿ユーザー:</p>
    <%= link_to user_path(post.user) do %>
      <%= image_tag post.user.get_profile_image %>
      <%= post.user.name %>
    <% end %>
    <p>タイトル：<%= post.title %></p>
    <p>本文：<%= post.body %></p>
  </div>
<% end %>
