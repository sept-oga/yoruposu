<h2>新規ユーザー登録</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "layouts/errors", object: @user %>

  <div class="form-group">
    <%= f.label :名前 %>
    <%= f.text_field :name, autofocus: true, class: 'form-control', autocomplete: "name" %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %>
    <%= f.text_field :email, class: 'form-control', autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "btn btn-secondary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
