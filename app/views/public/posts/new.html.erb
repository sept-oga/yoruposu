<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>新規投稿</h2>
      <% if @post.errors.any? %>
        <div class="alert alert-warning" role="alert">
          <h5>
            <i class="fa-solid fa-triangle-exclamation"></i> 
            <%= @post.errors.count %>件のエラーが発生しました
          </h5>
          <ul class="mb-0">
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <%= f.label :画像 %>
          <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
        </div>

        <div class="form-group">
          <label for="post_title">タイトル（50文字以内）</label>
          <%= f.text_field :title, class: "form-control post_title" %>
        </div>

        <div class="form-group">
          <label for="post_body">本文</label>
          <%= f.text_area :body, rows: '5', class: "form-control post_body" %>
        </div>

        <div class="form-group">
          <input type="submit" value="投稿" class="btn btn-secondary">
        </div>
      <% end %>
    </div>
   </div>
</div>
