<h2>新規投稿</h2>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
  <div class="form-group">
    <label for="post_image">画像</label>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <label for="post_title">タイトル（50文字以内）</label>
    <%= f.text_field :title, class: "form-control post_title col-6" %>
  </div>
  <div class="form-group">
    <label for="post_body">本文</label>
    <%= f.text_area :body, rows: '5', class: "form-control post_body col-6" %>
  </div>
  <div class="form-group">
    <input type="submit" value="投稿" class="btn btn-secondary">
  </div>
<% end %>
