<div class='container d-flex justify-content-center'>
  <div class='col-sm-12 col-md-8 px-sm-0 mx-auto'>
    <table class='table', style="color: ghostwhite">
      <thead>
        <tr>
          <th></th>
          <th>グループ名</th>
          <th>オーナー</th>
          <th>メンバー数</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% groups.each do |group| %>
        <tbody>
          <tr>
            <td><%= image_tag group.get_group_image, size: '50x50' %></td>
            <td><%= link_to group.name, group, class: "group_#{group.id}" %></td>
            <td><%= group.owner.name %></td>
            <td><%= group.group_members.count %></td>
            <% if group.is_owned_by?(current_user) %>
              <td><%= link_to '承認待ち・メンバー', permits_path(group.id), class: "group_#{group.id} btn btn-sm btn-primary", style: "width: 6rem;" %></td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        </tbody>
      <% end %>
    </table> 
  </div>
</div>