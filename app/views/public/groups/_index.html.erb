<div>
  <table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>メンバー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= image_tag group.get_group_image, size: '50x50' %></td>
        <td><%= link_to group.name, group, class: "group_#{group.id}" %></td>
        <td><%= group.group_members.count %></td>
        <% if group.is_owned_by?(current_user) %>
          <td><%= link_to '編集', edit_group_path(group), class: "group_#{group.id} btn btn-sm btn-secondary" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  </table> 
</div>