<div class="container">
  <h2 class="text-center"><%= @group.name %></h2>

  <h4 class="text-center">承認待ち一覧</h4>
  <div class="row mt-5">
    <div class="col-11 col-md-12 mx-auto">
    <% if @permits.present? %>
      <div class="table-responsive">
        <table class="table table-hover text-nowrap bg-light">
          <thead class="thead-dark">
            <tr>
              <th>名前</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @permits.each do |permit| %>
              <tr>
                <td><%= link_to permit.user.name, user_path(permit.user.id), class: "text-dark" %></td>
                <td class="text-right">
                  <%= link_to '加入許可', group_group_members_path(@group, permit_id: permit.id), method: :post, class: "btn btn-sm btn-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-center">承認待ちユーザーはいません。</p>
    <% end %>
    </div>
    <div class="mx-auto mt-5"><%= paginate @permits %></div>

    <h4 class="text-center">メンバー一覧</h4>
    <div class="row mt-5">
      <div class="col-11 col-md-12 mx-auto">
        <% @users.each do |user| %>
          <table class="mb-3">
            <tr>
              <td><%= image_tag user.get_profile_image, class: "object-fit-cover rounded-circle" %></td>
              <td><%= link_to user.name, user_path(user) %></td>
              <td><%= user.introduction %></td>
              <td><%= user.introduction %></td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
    <p class="text-center"><%= link_to "戻る", group_path(@group) %></p>
    </div>
  </div>

</div>