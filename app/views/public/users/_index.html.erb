<div class="container px-sm-0 d-flex justify-content-center">
  <table class="col-sm-12 col-md-8 px-sm-0 mx-auto">
    <% users.each do |user| %>
      <tr>
        <td class="p-2"><%= image_tag user.get_profile_image, size: "75x75", class: "icon-img rounded-circle" %></td>
        <td class="p-2"><%= link_to user.name, user_path(user) %></td>
        <td class="p-2"><%= simple_format(user.introduction, sanitize: true)%></td>
      </tr>
    <% end %>
  </table>
</div>